{
  "name": "rn-testing-app",
  "version": "1.0.0",
  "description": "React Native app with comprehensive testing strategy",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "expo": "expo start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build -c ios.sim.debug",
    "test:e2e:build-release": "detox build -c ios.sim.release",
    "test:performance": "node scripts/performance-test.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "11.4.1",
    "@react-native-community/slider": "5.0.1",
    "@react-native-voice/voice": "^3.2.4",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@shopify/flash-list": "2.0.2",
    "axios": "^1.4.0",
    "expo": "^54.0.21",
    "expo-notifications": "^0.32.12",
    "mammoth": "^1.6.0",
    "pdfjs-dist": "^3.11.174",
    "react": "19.2.0",
    "react-native": "0.81.5",
    "react-native-blob-util": "^0.19.4",
    "react-native-calendar-events": "^2.2.0",
    "react-native-document-picker": "^9.1.1",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-iap": "^12.13.0",
    "react-native-pdf": "^6.7.3",
    "react-native-performance": "^5.1.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-tts": "^4.1.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/runtime": "^7.22.5",
    "@react-native/eslint-config": "^0.72.0",
    "@react-native/metro-config": "^0.72.0",
    "@testing-library/jest-native": "^5.4.2",
    "@testing-library/react-native": "^12.2.0",
    "@types/jest": "^29.5.2",
    "@types/react": "~19.2.0",
    "@types/react-native": "^0.72.2",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.5.0",
    "detox": "^20.13.0",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "metro-react-native-babel-preset": "^0.76.7",
    "prettier": "^2.8.8",
    "react-test-renderer": "19.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16"
  }
}
